<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <com.ming.shao.sidesliplistview.widget.SimpleLineView
        android:id="@+id/simLine"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        smy:lineViewBgColor="#F0F0F0"
        smy:text="12" />

    <com.ming.shao.sidesliplistview.widget.DynamicAddTextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>